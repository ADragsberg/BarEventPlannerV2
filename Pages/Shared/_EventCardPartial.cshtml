@using BarEventPlannerV2.Models
@model Event
@*Lavet af Tristan og Mikkel*@

<div class="card mb-3">
    @*<img src="..." class="card-img-top" alt="...">*@
    <div class="card-body">
		
		@*Titel & Id same row*@
		<div class="row">
			<div class="col-6">
				<h5 class="card-title">@Model.Titel</h5>
			</div>
			<div class="col-6">
				<h5 class="card-title text-end">Id: @Model.Id</h5>
			</div>
		</div>

		@*Godkendt / Status*@
		@if (Model.Godkendt == true)
		{
			<p class="card-text text-success">Godkendt</p>
		}
		else
		{
			<p class="card-text text-warning">Afventer bekræftelse</p>
		}
		
		
		@*Privat*@
		@if (Model.PrivatEvent == true)
		{
			<p class="card-text">Adgang: privat</p>
		}
		else
		{
			<p class="card-text">Adgang: offentlig</p>
		}
		
		@*Antal Personer*@
		<p class="card-text">Antal Personer: @Model.AntalPersoner</p>
		
		@*Eventuel kunde*@
		<div class="row mb-3">
			<div class="col-3">
				<p class="card-text">Kunde: @Model.Kunde.Fornavn @Model.Kunde.Efternavn</p>
			</div>
			<div class="col-3">
				<p class="card-text">Telefonnummer: @Model.Kunde.Telefonnummer</p>
			</div>
		</div>
		
        @*<p class="card-text">@Model.Beskrivelse</p>*@
		
		@*row med edit og delete knapper, samt Starttidspunkt og Sluttidspunkt*@
        <div class="row">
			<div class="col-3" style="font-size:medium">
				<p class="card-text text-start"><small>Starttidspunkt: @Model.StartTidspunkt</small></p>
			</div>
				<div class="col-3" style="font-size:medium">
				<p class="card-text text-start"><small>Sluttidspunkt: @Model.SlutTidspunkt</small></p>
			</div>

            <div class="col-6 text-end">
                <a class="btn btn-sm btn-primary" type="button" title="Detaljer"
                   asp-page="GetEvent" asp-route-id="@Model.Id">Se detaljer</a>
                <a class="btn btn-sm btn-warning" type="button" title="Edit"
                   asp-page="OpdaterEvent" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-sm btn-danger" type="button" title="Delete"
                   asp-page="SletEvent" asp-route-id="@Model.Id">Delete</a>
				<a class="btn btn-sm btn-primary" type="button" title="Godkend"
                   asp-page="GodkendEvent" asp-route-id="@Model.Id">Godkend</a>
			</div>
        </div>
		
    </div>
</div>